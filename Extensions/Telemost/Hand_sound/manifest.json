{
  "manifest_version": 3,
  "name": "Яндекс Телемост - Звуки рук",
  "version": "1.1",
  "description": "Воспроизводит звук при поднятии и опускании руки в Яндекс Телемосте",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://mc.yandex.ru/*",
    "*://yastatic.net/*",
    "*://telemost.yandex.ru/*",
    "*://telemost.360.yandex.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://telemost.yandex.ru/*",
        "*://telemost.360.yandex.ru/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["sounds/*.mp3"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Звуки рук в Телемосте"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
