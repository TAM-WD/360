{
  "manifest_version": 3,
  "name": "Audit Logs Exporter",
  "version": "1.0.0",
  "description": "Экспорт логов в Excel",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://admin.yandex.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://admin.yandex.ru/auditlog-users*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
